<h2><%= mode === 'create' ? 'Create task' : 'Edit task' %></h2>

<form method="post" action="<%= mode === 'create' ? '/crud/tasks/create' : ('/crud/tasks/' + task.id + '/edit') %>">
  <p>
    Title:<br>
    <input type="text" name="title" value="<%= task.title %>" required>
  </p>

  <p>
    <label>
      <input type="checkbox" name="completed" <%= task.completed ? 'checked' : '' %>>
      Completed
    </label>
  </p>

  <p>
    <button type="submit"><%= mode === 'create' ? 'Create' : 'Save' %></button>
    <a href="/crud/tasks">Cancel</a>
  </p>
</form>